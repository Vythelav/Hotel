<Window x:Class="Hotel.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить сотрудника" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#301b28"
        Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Добавить сотрудника" 
                   Grid.ColumnSpan="2"
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Label Content="ФИО:" 
               Grid.Row="1" 
               Grid.Column="0" 
               Foreground="White" 
               VerticalAlignment="Center" 
               Margin="0,0,10,10"/>
        <TextBox x:Name="FIOTextBox" 
                 Grid.Row="1" 
                 Grid.Column="1" 
                 Margin="0,0,0,10"/>

        <Label Content="Логин:" 
               Grid.Row="2" 
               Grid.Column="0" 
               Foreground="White" 
               VerticalAlignment="Center" 
               Margin="0,0,10,10"/>
        <TextBox x:Name="LoginTextBox" 
                 Grid.Row="2" 
                 Grid.Column="1" 
                 Margin="0,0,0,10"/>

        <Label Content="Роль:" 
               Grid.Row="3" 
               Grid.Column="0" 
               Foreground="White" 
               VerticalAlignment="Center" 
               Margin="0,0,10,10"/>
        <ComboBox x:Name="RoleComboBox" 
                  Grid.Row="3" 
                  Grid.Column="1" 
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Администратор"/>
            <ComboBoxItem Content="Уборщик"/>
            <ComboBoxItem Content="Руководитель"/>
        </ComboBox>

        <Label Content="Телефон:" 
               Grid.Row="4" 
               Grid.Column="0" 
               Foreground="White" 
               VerticalAlignment="Center" 
               Margin="0,0,10,10"/>
        <TextBox x:Name="PhoneTextBox" 
                 Grid.Row="4" 
                 Grid.Column="1" 
                 Margin="0,0,0,10"/>

        <Label Content="Email:" 
               Grid.Row="5" 
               Grid.Column="0" 
               Foreground="White" 
               VerticalAlignment="Center" 
               Margin="0,0,10,10"/>
        <TextBox x:Name="EmailTextBox" 
                 Grid.Row="5" 
                 Grid.Column="1" 
                 Margin="0,0,0,10"/>

        <Label Content="Пароль:" 
               Grid.Row="6" 
               Grid.Column="0" 
               Foreground="White" 
               VerticalAlignment="Center" 
               Margin="0,0,10,10"/>
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="6" 
                     Grid.Column="1" 
                     Margin="0,0,0,20"/>

        <Button Content="Добавить" 
                Grid.Row="7" 
                Grid.ColumnSpan="2" 
                Foreground="White" 
                Background="#B6452C" 
                Click="AddButton_Click"/>
    </Grid>

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center" 
                                          Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center" 
                                          Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <Grid>
                                <ContentPresenter Content="{TemplateBinding SelectionBoxItem}" 
                                                  VerticalAlignment="Center" 
                                                  Margin="10,0"/>
                                <ToggleButton x:Name="ToggleButton" 
                                              Grid.Column="2" 
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                              ClickMode="Press"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005999"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF004080"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>