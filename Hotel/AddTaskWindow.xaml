<Window x:Class="Hotel.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить задачу" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#301b28"
        Foreground="White">

    <Grid Margin="10">
        <StackPanel>
            <Label Content="Сотрудник:" 
                   Foreground="White" 
                   FontSize="14"/>
            <ComboBox x:Name="EmployeeComboBox" 
                      DisplayMemberPath="FIO" 
                      SelectedValuePath="EmployeeID" 
                      FontSize="14" 
                      Margin="0,0,0,10"/>

            <Label Content="Задача:" 
                   Foreground="White" 
                   FontSize="14"/>
            <TextBox x:Name="TaskTextBox" 
                     FontSize="14" 
                     Margin="0,0,0,10"/>

            <Label Content="Дата:" 
                   Foreground="White" 
                   FontSize="14"/>
            <DatePicker x:Name="TaskDatePicker" 
                         FontSize="14" 
                         Margin="0,0,0,10"/>

            <Label Content="Статус:" 
                   Foreground="White" 
                   FontSize="14"/>
            <ComboBox x:Name="StatusComboBox" 
                      FontSize="14" 
                      Margin="0,0,0,10">
                <ComboBoxItem Content="Назначено"/>
                <ComboBoxItem Content="В процессе"/>
                <ComboBoxItem Content="Завершено"/>
            </ComboBox>

            <Button Content="Добавить" 
                    Width="100" 
                    Height="30" 
                    FontSize="14" 
                    Foreground="White" 
                    Background="#B6452C" 
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>